\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{styles/tw-scrbook-template-citing}[2019/08/07 v0.02 Citing
                    configuration and definitions]

% babel should be loaded before biblatex
\RequirePackage{babel}
% inputenc must be loaded before csquotes
\RequirePackage[utf8]{inputenc}
\RequirePackage[autostyle=true]{csquotes}
\RequirePackage[
    backend=biber,
    bibstyle=ieee-alphabetic,
    citestyle=ieee-alphabetic,
    date=iso,
    doi=false,
    dashed=false,
    isbn=false,
    seconds=true,
    sorting=nty,
    url=true,
    urldate=iso,
    ]{biblatex}

% Make some space between bib entries
\setlength\bibitemsep{1.5\itemsep}

% In bibliography
%   "Url: <url>" instead of "[ONLINE]. Available: <url>"
\DefineBibliographyStrings{english}{%
    url = Url
}

% Used to make direct cites
\newcommand{\dautocite}[2]{
    \enquote{#1} \autocite{#2}
}
